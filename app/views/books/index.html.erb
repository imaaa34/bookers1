<h1>Books</h1>
<table>
    <tr>
        <th>Title</th>
        <th>Body</th>
        <th></th>
    </tr>
    <tr>
        <% @books.each do |book| %>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td>
            <%= link_to 'Show', book_path(books.id) %>
            <%= link_to 'Edit', edit_book_path(books.id) %>
            <%= link_to 'Destroy', books_path, method: :delete "data-confirm" => "Are you dure?" %>
        </td>
        <% end %>
    </tr>

</table>


