<h1>Books</h1>
<table>
    <tr>
        <th>Title</th>
        <th>Body</th>
        <th></th>
    </tr>
    <tr>
        <% @books.each do |book| %>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td>
            <%= link_to 'Show', book_path(book.id) %>
            <%= link_to 'Edit', edit_book_path(book.id) %>
            <%= link_to 'Destroy', books_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
        </td>
        <% end %>
    </tr>

</table>


<h2>New book</h2>

<%= form_with model:@book, local:true do |f| %>

    <label>Title</label>
    <%= f.text_field :title %>

    <label>Body</label>
    <%= f.text_field :body %>

    <%= f.submit 'Create Book' %>

<% end %>