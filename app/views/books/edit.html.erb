<h2>Editing Book</h2>

<% if @book.errors.any? %>
    <%= @book.errors.count %> error prohibited this book from being saved:
    <% @book.errors.full_messages.each do |message| %>
        <%= message %>
    <% end %>
<% end %>

<%= form_with model:@book, local:true do |f| %>

<div class="input">
  <label>Title:</label>
  <%= f.text_field :title %>
</div>

<div class="input">
  <label>Body:</label>
  <%= f.text_area :body %>
</div>

<div class="submit">
  <%= f.submit 'Update Book' %>
</div>

<% end %>

